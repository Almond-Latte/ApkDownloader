# ApkDownloader Configuration File
# Copy this file to config.yaml and customize for your needs

# AndroZoo API Settings
api:
  download_url: "https://androzoo.uni.lu/api/download"
  # API_KEY should be set in .env file for security

# Output Directory Settings
directories:
  downloads: "./downloads"      # Where APK files will be saved
  cache: "./_cache"             # Cache for filtered results
  logs: "./logs"                # Log files location

# Sample Collection Settings
collection:
  # Samples with this many or more VirusTotal detections are considered malware
  min_detections_for_malware: 4

  # Default number of samples to collect
  benign_samples: 1000         # Number of benign (clean) samples
  malware_samples: 500          # Number of malware samples

  # Filter benign samples to only Google Play Store apps
  google_play_only: true        # Set to false to include apps from all markets

# Filtering Period
filtering:
  # Date range for filtering the dataset (YYYY-MM-DD HH:MM:SS format)
  date_from: "2022-04-01 00:00:00"
  date_until: "2024-12-01 00:00:00"

# Performance Settings
performance:
  parallel_downloads: 12        # Number of concurrent downloads

# Behavior Options
behavior:
  skip_hash_verification: false  # Set to true to skip SHA256 verification (faster but less safe)
  random_seed: 42                # Seed for reproducibility (set to null for random)

# Data Source
data_source:
  input_file: "latest.csv"     # Default APK list file